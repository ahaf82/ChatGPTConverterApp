<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/selectFileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select ChatGPT Export (ZIP)"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btnSaveToDownloads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save to Downloads"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnShareToDrive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload as Google Docs"
            android:layout_weight="1"
            android:backgroundTint="#4285F4"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your ChatGPT export ZIP to begin.\n\nConversations will be uploaded as Google Docs. Images and videos will be saved in a Media subfolder."
            android:textSize="14sp"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:minHeight="120dp"/>
    </ScrollView>

</LinearLayout>
